$('#buttonDetails').replaceWith( '<div id="buttonDetails">' +
'<%= j render "palettes/right_side/button_form" %>' +
"</div>");
var speedRateField = $('#button_speech_speed_rate');
var speedRate = <%= @button.speech_speed_rate %>;
$('.noUiSlider').noUiSlider({
  range: [1, 5]
  ,start: [speedRate, 5]
  ,step: 1
  ,handles: 1
  ,serialization: {
    to: [speedRateField]
  }
}).change(function(){
  $('#button_form').submit();
});

speedRateField.mouseover(function() {
  $(this).prop('disabled', true);
});

speedRateField.mouseout(function() {
  $(this).prop('disabled', false);
});

$(function() {
  $('.chosen-select').chosen({
    allow_single_deselect: true,
    no_results_text: 'No results matched',
    width: '300px',
    height: '50px'
  }).change(function(){
    $('#button_form').submit();
  });
});


