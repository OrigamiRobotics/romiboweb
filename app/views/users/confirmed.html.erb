<% content_for :content  do %>
    <div class="row-fluid">
      <div class="col-md-4" >
      </div>

      <div class="col-md-4">
        <div class="panel panel-info" id="unconfirmed_panel">
          <div class="panel-heading">
            <h3 class="panel-title center">
              <%= t('home.header.unconfirmed') %>
            </h3>
          </div>
          <div class="panel-body">
            <div id="confirmationBox">

                <%= form_for(resource, :as => resource_name,
                             :url => registration_path(resource_name), role: 'form') do |f|
                %>
                <p>Your sign up with Twitter was successful.
                   However, we need your email address to complete the process. </p>
                <br>
                <div class="form-group">
                  <%= f.label :first_name, class: 'sr-only' %>
                  <%= f.text_field :first_name,
                                   :required => true,
                                   class: 'form-control',
                                   placeholder: t('home.placeholder.first_name') %>
                </div>
                  <div class="form-group">
                    <%= f.label :email, class: 'sr-only' %>
                    <%= f.email_field :email,
                                      :required => true,
                                      class: 'form-control',
                                      placeholder: t('home.placeholder.email') %>
                  </div>
                <br>
                <div class="row">
                  <div class="col-md-6">
                    <%= link_to "Cancel", root_path, :class => 'btn btn-default btn-block' %>
                  </div>
                  <div class="col-md-6">
                    <%= f.submit t('home.button.signup'),
                                 id: 'signUpSubmitButton',
                                 :class => 'btn btn-primary btn-block'
                    %>                  </div>

                </div>

                <% end %>

            </div>
          </div>
        </div>
      </div>
       <div class="col-md-4"> </div>
    </div>
<% end %>
