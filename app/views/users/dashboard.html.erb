<% content_for :head  do %>
  <%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track' => true %>
<% end %>
<% content_for :content  do %>
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="row">

          <div class="col-xs-4">
            <div class="thumbnail dashboardLinkBox">
              <div class="caption">
                <h3>Button Palettes</h3>
                <h1 class="center"><i class="fa fa-th fa-3x"></i></h1>
                <p>Create your own buttons to control your Romibo's motion and voice by creating palettes of buttons.</p>
                <%= link_to '', palettes_path %>
              </div>
            </div>
          </div>

          <div class="col-xs-4">
            <div class="thumbnail dashboardLinkBox">
              <div class="caption">
                <h3>Lessons</h3>
                <h1 class="center"><i class="fa fa-file-text-o fa-3x"></i></h1>
                <br>
                <p>Author your own lessons for using Romibo in classes or therapy.</p>
                <%= link_to '', lessons_path %>
              </div>
            </div>
          </div>

          <div class="col-xs-4">
            <div class="thumbnail dashboardLinkBox ribbon-container">
              <div class="ribbon-wrapper">
                <div class="ribbon ribbon-green">Coming Soon</div>
              </div>  
              <div class="caption">
                <h3>Sharing</h3>
                <h1 class="center"><i class="fa fa-users fa-3x"></i></h1>
                <br>
                <p>Share your Create.Romibo control palettes and lessons with others.</p>
                <%= link_to '', 'javascript:void(0)' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
