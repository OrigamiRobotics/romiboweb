
<div class="collapse navbar-collapse topNavbar" id="signOutLinkOnTopNav">
  <% if user_signed_in? %>
    <ul class="nav navbar-nav navbar-right">
      <% unless params[:action] == 'home' %>
        <li><%= button_to t('topnav.signout'), destroy_user_session_path, method: :delete,
                        class: 'btn btn-primary', data: {confirm: 'Are you sure?'} %></li>
      <% end %>
    </ul>
  <% end %>
</div>

