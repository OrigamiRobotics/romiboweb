<div class="modal fade" id="paletteShareForm" tabindex="-1" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			  <h4 class="modal-title" id="myModalLabel">
			    <%= t('palettes.share.title', title: palette.title) %>
			  </h4>
			  <div class="modal-body">
				  <div id="emailAlert" class="alert" style="display: none"></div>
				  <form method="post" action="<%= palette_share_index_path(palette) %>" class="inline-form" data-remote="true" role="form">
					  <div class="form-group">
					    <label for="email" class="sr-only">Email</label>
					    <input name="email" type="email" class="form-control">
						  <span class="help-block">
								Please enter the email below where palette file needs to be sent.
						  </span>
					  </div>
					  <input type="submit" class="btn btn-default">
				  </form>
			  </div>
			</div>
		</div>
	</div>
</div>