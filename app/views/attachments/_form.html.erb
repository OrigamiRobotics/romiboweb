<%= form_for @attachment, :html => {:multipart => true} do |f| %>
    <div class="form-group">
      <%= f.file_field :name %>
      <%= f.hidden_field :name_cache %>
    </div>
    <div class="form-group">
      <%= f.submit 'Upload File',
                   class: "btn btn-primary",
                   disable_with: 'Uploading...',
                   id: "uploadFileButton" %>
   </div>
<% end %>