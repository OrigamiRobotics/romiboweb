<%= simple_form_for(resource, :as => resource_name,
                    :url => session_path(resource_name),
                    html: {class: 'form-horizontal' }) do |f|
%>
  <div class="signUpForm span10 offset1">

  <%= f.input :email, :required => false, :autofocus => true, label: false, placeholder: t('home.placeholder.email') %>
  <%= f.input :password, :required => false, label: false, placeholder: t('home.placeholder.password') %>
  <div class="row">
    <div class="span6">
      <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>

    </div>
    <div class="span6">
      <%= f.button :submit, t('home.button.signin'), class: "btn-primary btn-block",  id: "signUpButton" %>
    </div>
  </div>

  </div>
<% end %>