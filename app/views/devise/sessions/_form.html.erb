<div class="container-fluid">
  <%= form_for(resource, :as => resource_name,
               :url => session_path(resource_name), role: 'form') do |f|
  %>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.text_field :email, :required => false, :autofocus => true, class: 'form-control', placeholder: 'Email (required)' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.text_field :password, :required => false, class: 'form-control', placeholder: 'Password (required)' %>
    </div>


    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %> Remember Me
      </label>
    </div>
    <%= f.submit "Sign in", class: "btn btn-primary btn-block",  id: "signUpButton" %>

  <% end %>
</div>
