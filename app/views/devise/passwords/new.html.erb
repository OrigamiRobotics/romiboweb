<% content_for :content  do %>
<div class="container" id="resendConfirmation">
<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.input :email, :required => true, :autofocus => true, placeholder: t('home.placeholder.email') %>
          </div>
        </div>
      </div>
    <%= f.button :submit, t('home.placeholder.password_reset'), class: "btn btn-primary" %>

<% end %>

<!%= render "devise/shared/links" %>
</div>
<% end %>
