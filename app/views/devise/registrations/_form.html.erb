<div class="container-fluid">
  <%= form_for(resource, :as => resource_name,
               :url => registration_path(resource_name), role: 'form') do |f| %>
		<div class="inline">
		  <div class="form-group">
		    <%= f.label :first_name, class: 'sr-only' %>
		    <%= f.text_field :first_name, :required => false, class: 'form-control', placeholder: t('home.placeholder.first_name') %>
		  </div>
		  <div class="form-group">
		    <%= f.label :last_name, class: 'sr-only' %>
		    <%= f.text_field :last_name, :required => false, class: 'form-control', placeholder: t('home.placeholder.last_name') %>
		  </div>
		</div>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.text_field :email, :required => false, class: 'form-control', placeholder: t('home.placeholder.email') %>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, :required => false, class: 'form-control', placeholder: t('home.placeholder.password') %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation, :required => false, class: 'form-control', placeholder: t('home.placeholder.confirm_password') %>
    </div>
    <%= f.submit t('home.button.signup'), class: "btn btn-primary btn-block",  id: "signUpButton" %>

  <% end %>
</div>

