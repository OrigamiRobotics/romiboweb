<div class="container-fluid">
  <%= form_for(resource, :as => resource_name,
               :url => registration_path(resource_name), role: 'form') do |f| %>
		<div class="inline">
		  <div class="form-group">
		    <%= f.label :first_name, class: 'sr-only' %>
		    <%= f.text_field :first_name, :required => false, class: 'form-control', placeholder: 'First Name (required)' %>
		  </div>
		  <div class="form-group">
		    <%= f.label :last_name, class: 'sr-only' %>
		    <%= f.text_field :last_name, :required => false, class: 'form-control', placeholder: 'Last Name (required)' %>
		  </div>
		</div>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.text_field :email, :required => false, class: 'form-control', placeholder: 'Email (required)' %>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.text_field :password, :required => false, class: 'form-control', placeholder: 'Password (required)' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.text_field :password_confirmation, :required => false, class: 'form-control', placeholder: 'Confirm password (required)' %>
    </div>
    <%= f.submit "Sign up", class: "btn btn-primary btn-block",  id: "signUpButton" %>

  <% end %>
</div>

