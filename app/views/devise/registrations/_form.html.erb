<div class="container-fluid">
  <%= form_for(resource, :as => resource_name,
               :url => registration_path(resource_name), role: 'form') do |f|
  %>
    <div class="form-group">
      <%= f.label :first_name, class: 'sr-only' %>
      <%= f.text_field :first_name,
                       :required => true,
                       class: 'form-control',
                       placeholder: t('home.placeholder.first_name') %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: 'sr-only' %>
      <%= f.text_field :last_name,
                       :required => true,
                       class: 'form-control',
                       placeholder: t('home.placeholder.last_name') %>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email,
                       :required => true,
                       class: 'form-control',
                       placeholder: t('home.placeholder.email') %>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password,
                       :required => true,
                       class: 'form-control',
                       placeholder: t('home.placeholder.password') %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation,
                       :required => true,
                       class: 'form-control',
                       placeholder: t('home.placeholder.confirm_password') %>
    </div>
    <div class="checkbox">
      <label>
        <%= f.check_box :terms, :as => :boolean %>
        <%= t('home.placeholder.terms') %>
	      <%= link_to t('activerecord.attributes.user.terms'),
	                  controller: 'romiboweb_pages',
	                  action: 'terms',
	                  remote: true %>
      </label>
    </div>

    <%= simple_form_for(resource, :as => resource_name,
                      :html => { :class => 'inline form-horizontal'},
                      :url => registration_path(resource_name)) do |f| %>
    <%= f.submit t('home.button.signup'), :class => 'btn btn-primary btn-block' %>
  <% end %>
  <% end %>
</div>

