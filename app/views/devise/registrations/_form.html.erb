<%= simple_form_for(resource, :as => resource_name,
                    :url => registration_path(resource_name),
                    html: {class: 'form-horizontal' }) do |f| %>
  <div class="signUpForm">
    <%= f.error_notification %>

      <%= f.input :first_name , label: false, placeholder: 'First Name (required' %>
      <%= f.input :last_name, label: false, placeholder: 'Last Name (required)' %>
      <%= f.input :email, :required => true, :autofocus => true,
                  label: false, placeholder: 'Email (required)' %>
      <%= f.input :password, :required => true, label: false, placeholder: 'Password (required)' %>
      <%= f.input :password_confirmation, :required => true,
                  label: false, placeholder: "Confirm password (required)" %>
    <div class="span4">
      <%= f.button :submit, "Sign up", class: "btn-primary btn-block",  id: "signUpButton" %>
    </div>
  </div>

<% end %>
